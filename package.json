{
  "name": "thimbleful",
  "version": "1.0.0",
  "description": "A non-framework framework. Just enough Javascript to make your single page app come to life.",
  "main": "src/index.js",
  "config": {
    "testPort": 8888
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack --mode production",
    "test-server": "webpack-dev-server --mode production --port $npm_package_config_testPort",
    "test": "jest --maxWorkers=2",
    "watch-tests": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/timendus/thimbleful/"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "jest": "^26.0.1",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^3.3.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {}
}
